{
  "openapi": "3.0.0",
  "info": {
    "title": "Rent-X API Docs",
    "description": "API docs for cars rent application",
    "version": "0.0.0",
    "contact": {
      "name": "Matheus Felipe Zanin",
      "url": "https://gihub.com/mattz6"
    }
  },
  "paths": {
    "/v1/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a new car category",
        "description": "Create a new car category, like SUV",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "Sport utility vehicle"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "Yeah, just list all categories",
        "responses": {
          "200": {
            "description": "Categories successfully listed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": "suv-id",
                      "name": "SUV",
                      "description": "Sport utility vehicle"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/v1/categories/import": {
      "post": {
        "tags": ["Category"],
        "summary": "Import some categories by upload",
        "description": "Import some categories by upload",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categories created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/specifications": {
      "post": {
        "tags": ["Specification"],
        "summary": "Create a new car specification",
        "description": "Create a new car specification",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Specification created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/authentication/session": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Authenticate user",
        "description": "Generate a access token for a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentication success"
          },
          "422": {
            "description": "Email or password invalid"
          }
        }
      }
    },
    "/v1/cars": {
      "post": {
        "tags": ["Cars"],
        "summary": "Create a new car",
        "description": "Create a new car register",
        "security": [
          { "bearerAuth": [] }
        ],
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/definitions/Car"
            }
          }
        },
        "responses": {
          "201": {
            "description": "Car created successfully"
          },
          "422": {
            "description": "Theres a Car registered with this license plate"
          }
        }
      }
    },
    "/v1/cars/{id}/images": {
      "post": {
        "tags": ["Cars"],
        "summary": "Upload car images",
        "description": "Upload many images for a car",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Car id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Car images uploaded successfully"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Car": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "license_plate": {
          "type": "string"
        },
        "daily_rate": {
          "type": "number"
        },
        "daily_late_fee": {
          "type": "number"
        },
        "brand": {
          "type": "string"
        },
        "category_id": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
